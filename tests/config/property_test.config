/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Property-Based Testing Configuration for VCF Realignment Optimization
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

params {
    // Property-based testing parameters
    property_test_iterations = 100
    property_test_timeout = "30.m"
    
    // Test data generation parameters
    test_data_seed = 42
    max_test_samples = 10
    max_test_patients = 5
    
    // Resource limits for property tests
    max_cpus = 2
    max_memory = "4.GB"
    max_time = "30.m"
    
    // Test output directory
    property_test_outdir = "results/property_tests"
    
    // Enable detailed logging for property tests
    property_test_debug = true
    
    // Test data paths
    test_fasta = "https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/genome/genome.fasta"
    test_fasta_fai = "https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/genome/genome.fasta.fai"
    test_dict = "https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/genome/genome.dict"
    test_hisat2 = "https://raw.githubusercontent.com/nf-core/test-datasets/rnadnavar/data/reference/hisat2_index.tar.gz"
}

process {
    // Default process configuration for property tests
    cpus = { params.max_cpus }
    memory = { params.max_memory }
    time = { params.max_time }
    
    // Error handling for property tests
    errorStrategy = 'retry'
    maxRetries = 1
    
    // Resource requirements for specific processes
    withName: 'PROPERTY_TEST_*' {
        cpus = 1
        memory = "2.GB"
        time = "10.m"
    }
}

// Load base configuration
includeConfig 'nextflow.config'