def test_data_dir = "${launchDir}/tests/data/"
def nf_core_modules_data = "https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/"

try {
    includeConfig "https://raw.githubusercontent.com/nf-core/modules/master/tests/config/test_data.config"
} catch (Exception e) {
    System.err.println("WARNING: Could not load nf-core/modules test data config")
}

params {
    test_data {
        'external' {
        }
        'rna_editing' {
            'test_rescue_vcf'           = "${test_data_dir}/test_rescue.vcf.gz"
            'test_rescue_vcf_tbi'       = "${test_data_dir}/test_rescue.vcf.gz.tbi"
            'test_rediportal_vcf'       = "${test_data_dir}/test_rediportal.vcf.gz"
            'test_rediportal_vcf_tbi'   = "${test_data_dir}/test_rediportal.vcf.gz.tbi"
            'test_large_rescue_vcf'     = "${test_data_dir}/test_large_rescue.vcf.gz"
            'test_large_rescue_vcf_tbi' = "${test_data_dir}/test_large_rescue.vcf.gz.tbi"
            'test_malformed_vcf'        = "${test_data_dir}/test_malformed.vcf.gz"
        }
    }
}
