nextflow_workflow {

    name "Test Subworkflow INPUT_VALIDATION"
    script "../main.nf"
    workflow "INPUT_VALIDATION"

    tag "subworkflows"
    tag "subworkflows_local"
    tag "input_validation"

    test("input_validation - stub") {

        options "-stub"

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [ id:'test', single_end:false ],
                    file("dummy.vcf"),
                    []
                ])
                input[1] = Channel.of([
                    [ id:'test', single_end:false ],
                    file("dummy.cram"),
                    []
                ])
                input[2] = []
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match("stub") }
            )
        }

    }

}