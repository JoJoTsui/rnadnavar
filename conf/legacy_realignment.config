/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Legacy Realignment Configuration
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Configuration profile for backward compatibility with legacy MAF-based realignment
    This profile disables optimization features and uses the original workflow
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

params {
    // Force legacy MAF-based realignment
    realignment_mode                    = 'maf'
    force_legacy_realignment            = true
    
    // Disable optimization features for backward compatibility
    enable_vcf_realignment_optimization = false
    disable_realignment_optimization    = true
    
    // Use original error handling
    process.errorStrategy               = 'terminate'
}