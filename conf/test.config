/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/rnadnavar -profile test,<docker/singularity> --outdir <OUTDIR>

~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data
    input = "${projectDir}/tests/csv/3.0/fastq_triplet_local.csv"
    // Small reference genome
    wes               = true
    genome            = 'GRCh38'
    fasta             = '/t9k/mnt/hdd/work/Vax/rnadnavar/test-datasets/reference/chr7_hg38/GRCh38.d1.vd1.chr7.mini.fa'
    igenomes_ignore   = true
    dbsnp             = "/t9k/mnt/hdd/work/Vax/rnadnavar/test-datasets/reference/chr7_hg38/dbsnp_146.hg38.chr7.mini.vcf.gz"
    germline_resource = "/t9k/mnt/hdd/work/Vax/rnadnavar/test-datasets/reference/chr7_hg38/af-only-gnomad.hg38.chr7.mini.vcf.gz"
    no_intervals      = true
    gtf               = '/t9k/mnt/hdd/work/Vax/rnadnavar/test-datasets/reference/chr7_hg38/gencode.v36.annotation.chr7.mini.gtf'

    // params
    split_fastq       = 50000
    tools             = 'strelka,filtering' // Variant calling with Strelka

    // Test databases for COSMIC/gnomAD annotation
    cosmic_database = "${projectDir}/tests/data/test_cosmic.vcf.gz"
    gnomad_database = "${projectDir}/tests/data/gnomad"
    
    // Test databases for RNA editing annotation
    rediportal_vcf = "${projectDir}/tests/data/test_rediportal.vcf.gz"
    rediportal_tbi = "${projectDir}/tests/data/test_rediportal.vcf.gz.tbi"

}
