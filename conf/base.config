/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    nf-core/rnadnavar Nextflow base config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    A 'blank slate' config file, appropriate for general use on most high performance
    compute environments. Assumes that all software is installed and available on
    the PATH. Runs in `local` mode - all jobs will be run on the logged in environment.
----------------------------------------------------------------------------------------
*/

process {  // base

    // TODO nf-core: Check the defaults for all processes
    cpus   = { 8      * (task.attempt ?: 1) }
    memory = { 32.GB  * (task.attempt ?: 1) }
    time   = { 4.h    * (task.attempt ?: 1) }

    errorStrategy = { task.exitStatus in ((130..145) + 104 + 175) ? 'retry' : 'finish' }
    maxRetries    = 1
    maxErrors     = '-1'

    // Process-specific resource requirements
    // NOTE - Please try and re-use the labels below as much as possible.
    withLabel:process_single {
        cpus   = { 8                           }
        memory = { 32.GB * (task.attempt ?: 1) }
        time   = { 4.h   * (task.attempt ?: 1) }
    }
    withLabel:process_low {
        cpus   = { 4     * (task.attempt ?: 1) }
        memory = { 16.GB * (task.attempt ?: 1) }
        time   = { 4.h   * (task.attempt ?: 1) }
    }
    withLabel:process_medium {
        cpus   = { 12    * (task.attempt ?: 1) }
        memory = { 48.GB * (task.attempt ?: 1) }
        time   = { 8.h   * (task.attempt ?: 1) }
    }
    withLabel:process_high {
        cpus   = { 32    * (task.attempt ?: 1) }
        memory = { 96.GB * (task.attempt ?: 1) }
        time   = { 16.h  * (task.attempt ?: 1) }
    }
    withLabel:process_long {
        time   = { 24.h  * (task.attempt ?: 1) }
    }
    withLabel:process_high_memory {
        memory = { 200.GB * (task.attempt ?: 1) }
    }
    withLabel:error_ignore {
        errorStrategy = 'ignore'
    }
    withLabel:error_retry {
        errorStrategy = 'retry'
        maxRetries    = 2
    }
    // Requirements for specific processes.
    // See https://www.nextflow.io/docs/latest/config.html#config-process-selectors
    withName: 'BWAMEM1_MEM|BWAMEM2_MEM' {
        cpus         = { 32  * (task.attempt ?: 1) }
        memory       = { 48.GB * (task.attempt ?: 1)}
        time         = { 10.h  * (task.attempt ?: 1) }
    }
    withName: '.*HISAT2_BUILD' {
        cpus         = { 32 }
        memory       = { 200.GB * (task.attempt ?: 1)}
        time         = { 30.h   * (task.attempt ?: 1)}
    }
    withName: '.*HISAT2_ALIGN' {
        cpus         = { 24    * (task.attempt ?: 1) }
        memory       = { 48.GB * (task.attempt ?: 1)}
        time         = { 6.h   * (task.attempt ?: 1)}
    }
    withName: 'MUTECT2_PAIRED' {
        cpus         = { 36    * (task.attempt ?: 1) }
        memory       = { 72.GB * (task.attempt ?: 1)}
        time         = { 8.h   * (task.attempt ?: 1)}
    }
    withName: 'ENSEMBLVEP_VEP' {
        cpus   = { 24     * (task.attempt ?: 1) }
        memory = { 48.GB * (task.attempt ?: 1)}
        time   = { 8.h   * (task.attempt ?: 1)}
        errorStrategy = { task.exitStatus in [130,143,137,104,134,139,140,141] ? 'retry' : 'finish' }
        maxRetries = 2
    }

    withName: 'FASTQC|SAMTOOLS_FAIDX|TABIX.*'{
        time    = { 1.h  * (task.attempt ?: 1)}
        cpus    = { 4    * (task.attempt ?: 1) }
        memory  = { 8.GB * (task.attempt ?: 1)}
    }
    
    // RNA Editing Annotation - Performance Optimized Configuration
    withName: 'RNA_EDITING_ANNOTATION' {
        // Dynamic resource allocation based on file size and system capabilities
        cpus   = { 
            def base_cpus = 2
            def max_cpus = 8
            def scaled_cpus = Math.min(max_cpus, base_cpus * (task.attempt ?: 1))
            return Math.min(scaled_cpus, Runtime.runtime.availableProcessors())
        }
        memory = { 
            def base_memory = 4.GB
            def attempt_factor = task.attempt ?: 1
            def scaled_memory = base_memory * attempt_factor
            
            // Scale memory based on available system memory
            def max_memory = 16.GB
            return Math.min(scaled_memory, max_memory) as nextflow.util.MemoryUnit
        }
        time   = { 
            def base_time = 2.h
            def attempt_factor = task.attempt ?: 1
            return (base_time * attempt_factor) as nextflow.util.Duration
        }
        
        // Enhanced error handling for performance optimization
        errorStrategy = { 
            if (task.exitStatus in [130,143,137,104,134,139,140]) {
                return 'retry'  // Resource-related failures and timeouts
            } else if (task.exitStatus in [1,2]) {
                return 'ignore'  // Soft failures - continue with fallback
            } else {
                return 'terminate'  // Hard failures
            }
        }
        maxRetries = 3
        
        // Performance optimization labels
        label = 'process_medium'
        
        // Container optimization
        container = 'biocontainers/mulled-v2-629aec3ba267b06a1efc3ec454c0f09e134f6ee2:3b083bb5eae6e491b8579589b070fa29afbea2a1-0'
        
        // Disk space allocation for large files
        disk = { 
            def base_disk = 10.GB
            def attempt_factor = task.attempt ?: 1
            return (base_disk * attempt_factor) as nextflow.util.MemoryUnit
        }
    }
    withName: 'MULTIQC|FASTP|MOSDEPTH|SAMTOOLS_CONVERT'{
        time    = { 2.h   * (task.attempt ?: 1)}
        cpus    = { 4     * (task.attempt ?: 1) }
        memory  = { 8.GB * (task.attempt ?: 1)}
    }
    withName:'GATK4_APPLYBQSR|GATK4_APPLYBQSR_SPARK|GATK4_BASERECALIBRATOR'{
        cpus   = { 12     * (task.attempt ?: 1) }
        memory = { 32.GB * (task.attempt ?: 1)}
        time   = { 24.h  * (task.attempt ?: 1)}
    }
    withName:'GATK4_GATHERBQSRREPORTS'{
        cpus   = { 12     * (task.attempt ?: 1) }
        memory = { 16.GB * (task.attempt ?: 1)}
        time   = { 16.h  * (task.attempt ?: 1)}
    }
    withName: 'GATK4_MARKDUPLICATES'{
        cpus   = { 18    * (task.attempt ?: 1)}
        memory = { 55.GB * (task.attempt ?: 1)}
        time   = { 16.h  * (task.attempt ?: 1)}
    }
    withName: 'GATK4_GETPILEUPSUMMARIES' {
        memory = '72.GB'  // or higher
    }
    withName:'STRELKA.*|MANTA.*|STAR_ALIGN|RNA_FILTERING' {
        errorStrategy   = { task.exitStatus in [143,137,104,134,139,140,247,1,255] ? 'retry' : 'ignore' }
        cpus            = { 16     * (task.attempt ?: 1) }
        memory          = { 48.GB * (task.attempt ?: 1)}
        time            = { 4.h   * (task.attempt ?: 1)}

    }
    withName: 'SAGE' {
        cpus         = { 4     * (task.attempt ?: 1)}
        memory       = { 14.GB * (task.attempt ?: 1)}
        time         = { 4.h   * (task.attempt ?: 1)}
    }
    withName: 'DEEPSOMATIC' {
        cpus         = { 18    * (task.attempt ?: 1)}
        memory       = { 96.GB * (task.attempt ?: 1)}
        time         = { 12.h  * (task.attempt ?: 1)}
    }

    withName: 'PICARD_FILTERSAMREADS|RUN_CONSENSUS.*' {
        cpus   = { 12    * (task.attempt ?: 1) }
        memory = { 40.GB * (task.attempt ?: 1) }
        time   = { 2.h   * (task.attempt ?: 1) }
    }
    withName: 'SAMTOOLS_EXTRACT_READ_IDS' {
        cpus   = { 12    * (task.attempt ?: 1) }
        memory = { 40.GB * (task.attempt ?: 1) }
        time   = { 12.h  * (task.attempt ?: 1) }
    }

    withName: 'GATK4_CREATESEQUENCEDICTIONARY' {
        cpus   = { 2     * (task.attempt ?: 1) }
        memory = { 8.GB  * (task.attempt ?: 1) }
        time   = { 1.h   * (task.attempt ?: 1) }
    }

    withName: '.*:FASTQ_ALIGN_STAR:BAM_SORT_STATS_SAMTOOLS_GENOME:SAMTOOLS_SORT' {
        cpus   = 12
        memory = 16.GB
        time   = 4.h
        errorStrategy = 'ignore'
    }
    withName: '.*:FASTQ_ALIGN_STAR:BAM_SORT_STATS_SAMTOOLS_TRANSCRIPTOME:SAMTOOLS_SORT' {
        cpus   = 12
        memory = 16.GB
        time   = 4.h
        errorStrategy = 'ignore'
    }
    withName: '.*BAM_SORT_STATS_SAMTOOLS:SAMTOOLS.*' {
        cpus   = { 4 * (task.attempt ?: 1) }
        memory = { 16.GB * (task.attempt ?: 1) }
        time   = { 4.h * (task.attempt ?: 1) }
    }
    withLabel: process_gpu {
        ext.use_gpu = { workflow.profile.contains('gpu') }
        accelerator = { workflow.profile.contains('gpu') ? 1 : null }
    }

    // RNA editing annotation specific configuration with comprehensive error handling
    withName: 'RNA_EDITING_ANNOTATION' {
        // Resource management with scaling based on attempt
        cpus         = { task.attempt == 1 ? 2 : task.attempt == 2 ? 4 : 6 }
        memory       = { task.attempt == 1 ? '4.GB' : task.attempt == 2 ? '8.GB' : '12.GB' }
        time         = { task.attempt == 1 ? '2.h' : task.attempt == 2 ? '4.h' : '6.h' }
        
        // Comprehensive error handling strategy
        // Retry on resource-related failures, ignore on missing dependencies/files
        errorStrategy = { 
            if (task.exitStatus in [130,143,137,104,134,139]) {
                // Resource-related failures - retry with more resources
                return 'retry'
            } else if (task.exitStatus in [1,2,13,127]) {
                // File not found, permission denied, command not found - ignore and continue workflow
                return 'ignore'
            } else if (task.exitStatus == 124) {
                // Timeout - retry with more time
                return 'retry'
            } else {
                // Other failures - terminate to prevent cascading issues
                return 'terminate'
            }
        }
        maxRetries   = 2
        
        // Disk space requirements for temporary files
        disk         = '10.GB'
        
        // Process-specific settings
        ext.args     = { params.rna_annotation_args ?: '' }
        ext.when     = { params.enable_rna_annotation && params.tools && params.tools.split(',').contains('rescue') }
    }

        
    withName: 'COSMIC_GNOMAD_ANNOTATION' {
        cpus   = { 36    * (task.attempt ?: 1)}
        memory = { 64.GB * (task.attempt ?: 1)}
        time   = { 6.h   * (task.attempt ?: 1)}
    }

    // ============================================================================
    // REALIGNMENT PREPROCESSING - Read extraction and filtering
    // ============================================================================
    withName: 'PICARD_FILTERSAMREADS' {
        cpus   = { 16    * (task.attempt ?: 1) }            // Increased from 12
        memory = { 56.GB * (task.attempt ?: 1) }            // Increased from 40GB
        time   = { 4.h   * (task.attempt ?: 1) }            // Increased from 2h
    }
    
    withName: 'SAMTOOLS_EXTRACT_READ_IDS' {
        cpus   = { 16    * (task.attempt ?: 1) }            // Increased from 12
        memory = { 56.GB * (task.attempt ?: 1) }            // Increased from 40GB
        time   = { 12.h  * (task.attempt ?: 1) }
    }
    
    withName: 'VCF2BED|MAF2BED' {
        cpus   = { 4     * (task.attempt ?: 1) }
        memory = { 16.GB * (task.attempt ?: 1) }
        time   = { 2.h   * (task.attempt ?: 1) }
    }

    // ============================================================================
    // QC AND REPORTING - Low priority, can run with fewer resources
    // ============================================================================
    withName: 'FASTQC' {
        cpus    = { 4    * (task.attempt ?: 1) }             // Increased from 1
        memory  = { 8.GB * (task.attempt ?: 1) }             // Increased from 4GB
        time    = { 2.h  * (task.attempt ?: 1) }             // Increased from 1h
    }
    
    withName: 'FASTP' {
        cpus    = { 8     * (task.attempt ?: 1) }            // Increased from 4
        memory  = { 16.GB * (task.attempt ?: 1) }            // Increased from 8GB
        time    = { 4.h   * (task.attempt ?: 1) }            // Increased from 2h
    }
    
    withName: 'MOSDEPTH' {
        cpus    = { 8     * (task.attempt ?: 1) }            // Increased from 4
        memory  = { 16.GB * (task.attempt ?: 1) }            // Increased from 8GB
        time    = { 4.h   * (task.attempt ?: 1) }            // Increased from 2h
    }
    
    withName: 'SAMTOOLS_CONVERT' {
        cpus    = { 8     * (task.attempt ?: 1) }           // Increased from 4
        memory  = { 16.GB * (task.attempt ?: 1) }            // Increased from 8GB
        time    = { 4.h   * (task.attempt ?: 1) }            // Increased from 2h
    }
    
    withName: 'MULTIQC' {
        cpus    = { 4     * (task.attempt ?: 1) }
        memory  = { 8.GB * (task.attempt ?: 1)}
        time    = { 2.h   * (task.attempt ?: 1)}
    }
    
    withName: 'SAMTOOLS_FAIDX|TABIX.*' {
        cpus    = { 2    * (task.attempt ?: 1) }            // Increased from 1
        memory  = { 8.GB * (task.attempt ?: 1)}             // Increased from 4GB
        time    = { 2.h  * (task.attempt ?: 1)}             // Increased from 1h
    }
    
    withName: 'GATK4_CREATESEQUENCEDICTIONARY' {
        cpus   = { 4     * (task.attempt ?: 1) }            // Increased from 2
        memory = { 16.GB  * (task.attempt ?: 1) }           // Increased from 8GB
        time   = { 2.h   * (task.attempt ?: 1) }            // Increased from 1h
    }

    // ============================================================================
    // GPU PROCESSES - For GPU-enabled environments
    // ============================================================================
    withLabel: process_gpu {
        ext.use_gpu = { workflow.profile.contains('gpu') }
        accelerator = { workflow.profile.contains('gpu') ? 1 : null }
    }

    // ============================================================================
    // PICARD REORDERSAM - High memory for optimized performance
    // ============================================================================
    withLabel: process_reordersam {
        cpus   = { 18     * (task.attempt ?: 1) }
        memory = { 192.GB * (task.attempt ?: 1) }
        time   = { 8.h    * (task.attempt ?: 1) }
    }

    withName: 'PICARD_REORDERSAM' {
        cpus   = { 18     * (task.attempt ?: 1) }
        memory = { 192.GB * (task.attempt ?: 1) }
        time   = { 8.h    * (task.attempt ?: 1) }
        errorStrategy = { task.exitStatus in [130,143,137,104,134,139,140] ? 'retry' : 'finish' }
        maxRetries = 2
    }
}
